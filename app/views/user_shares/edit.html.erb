<% @bids.each do |bid| %>
  <%= form_for bid do |f| %>
    <legend>
      <span>
        <%= "Edit Bid for #{bid.user_share.team.name} Stock:" %>
      </span>
    </legend>
    <div class = "form-group col-md-4">
      <%= f.label :shares, "Number of Shares" %>
      <%= f.text_field :shares, :class=>"form-control", :placeholder=>"Number of Shares" %>
    </div>
    <div class = "form-group col-md-8">
      <%= f.label :points, "Bid Points per Share" %>
      <%= f.number_field :points, :class=>"form-control", :step => 'any' %>
    </div>
    <div class="col-md-4" style="margin-top: 24px margin-bottom: 100px">
      <%= f.button "Create | Edit Bid", :class=> "btn btn-primary"%>
    </div>
  <% end %>
<% end %>


<% @asks.each do |ask| %>
  <%= form_for ask do |f| %>
    <legend>
      <span>
        <%= "Edit Ask for #{ask.user_share.team.name} Stock:" %>
      </span>
      <span class= "pull-right">
        <%= "Total Shares: #{ask.user_share.number_of_shares} " %>
      </span>
    </legend>
    <div class = "form-group col-md-4">
      <%= f.label :shares, "Number of Shares" %>
      <%= f.text_field :shares, :class=>"form-control", :placeholder=>"Number of Shares" %>
    </div>
    <div class = "form-group col-md-8">
      <%= f.label :points, "Ask Points per Share" %>
      <%= f.number_field :points, :class=>"form-control", :step => 'any' %>
    </div>
    <div class="col-md-4" style="margin-top: 24px margin-bottom: 100px">
      <%= f.button "Create | Edit Ask", :class=> "btn btn-primary"%>
    </div>
  <% end %>
<% end %>
